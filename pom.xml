<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openhab.addons.bundles</groupId>
    <artifactId>org.openhab.addons.reactor.bundles</artifactId>
    <version>4.0.0</version>
  </parent>

  <properties>
    <basedirRoot>/Users/idanm/Dev/git/lp/openhab-honeywellhome/</basedirRoot>
  </properties>

  <scm>
    <connection>scm:git:${project.scm.url}</connection>
    <developerConnection>scm:git:${project.scm.url}</developerConnection>
    <url>https://github.com/idanudel/openhab-honeywellhome.git</url>
    <tag>HEAD</tag>
  </scm>

  <artifactId>org.openhab.binding.honeywellhome</artifactId>
  <version>4.0.0-SNAPSHOT</version>

  <name>openHAB Add-ons :: Bundles :: HoneywellHome Binding</name>


  <distributionManagement>
    <repository>
      <id>github</id>
      <url>scm:git:https://maven.pkg.github.com/idanudel/openhab-honeywellhome</url>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>openHAB</id>
      <name>openHabTinyB</name>
      <url>https://openhab.jfrog.io/openhab/libs-release/</url>
    </repository>
  </repositories>


  <profiles>
    <profile>
      <id>github</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.diffplug.spotless</groupId>
            <artifactId>spotless-maven-plugin</artifactId>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.commonjava.maven.plugins</groupId>
            <artifactId>directory-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>directories</id>
                <phase>none</phase>
                <configuration>
                  <property>basedirRoot</property>
                  <project>
                    <groupId>org.openhab.addons</groupId>
                    <artifactId>org.openhab.addons.reactor</artifactId>
                  </project>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
